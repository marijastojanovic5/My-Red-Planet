<div class="flex items-center justify-center h-screen">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "p-2 font-mono bg-orange-200 w-1/4 mt-20 rounded-md border-y-1 border-2 border-orange-400 opacity-70" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="font-bold">Sign up to explore Mars planet!</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= button_tag "Sign up", type: "submit" %>
  </div>
  <%= render "devise/shared/links" %>
  <% end %>
  </div>

