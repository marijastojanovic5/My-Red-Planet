<div class="flex items-center justify-center h-screen">

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "p-2 font-mono bg-orange-200 w-1/4 mt-20 rounded-md border-y-1 border-2 border-orange-400 opacity-70"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="font-bold">Resend confirmation instructions</h2>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</div>
