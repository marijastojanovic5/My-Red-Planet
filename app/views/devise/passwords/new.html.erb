<div class="flex items-center justify-center h-screen">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "p-2 font-mono bg-orange-200 w-1/4 mt-20 rounded-md border-y-1 border-2 border-orange-400 opacity-70"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="font-bold">Forgot your password?</h2>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
  <%= render "devise/shared/links" %>
  <% end %>
  </div>

