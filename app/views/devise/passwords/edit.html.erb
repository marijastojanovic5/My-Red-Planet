
<div class="flex items-center justify-center h-screen">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "p-2 font-mono bg-orange-200 w-1/4 mt-20 rounded-md border-y-1 border-2 border-orange-400 opacity-70" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <h2 class="font-bold">Change your password</h2>
  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
  <%= render "devise/shared/links" %>
  <% end %>
  </div>

